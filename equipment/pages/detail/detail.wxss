/* pages/equipment/detail.wxss */
page {
    background-color: #fff;
}

.equ-detail-topnav {
    display: flex;
    height: 124rpx;
    border-bottom: 1rpx solid #E2E2E2;
    font-size: 30rpx;
    color: #999999;
}

.equ-detail-topnav>view {
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

.equ-detail-topnav .current {
    color: #111;
}

.equ-detail-topnav .current .blank_blue {
    border: 5rpx solid #0A78F5;
}

.blank_blue {
    width: 24rpx;
    height: 0;
    border: 5rpx solid #fff;
    border-radius: 6rpx;
    margin-top: 24rpx;
}

.equ-detail-container {
    display: flex;
    height: calc(100vh - 124rpx);
    width: 100%;
}

.equ-detail-leftnav {
    width: 200rpx;
    flex-direction: column;
    background-color: #F7F7F7;
    height: 100%;
}

.equ-detail-leftnav .scroll-view {
    width: 100%;
    box-sizing: border-box;
    height: 100%;
}

.shop-item {
    /* height: 100rpx; */
}

.shop-name {
    max-width: 200rpx;
    white-space: nowrap;  
    overflow: hidden;  
    text-overflow: ellipsis;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #111;
    font-size: 34rpx;
    font-weight: bold;
    background-color: #fff;
}

.device-list {}

.device-item {
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #111;
    font-size: 30rpx;
    max-width: 200rpx;
    white-space: nowrap;  
    overflow: hidden;  
    text-overflow: ellipsis;
}

.device-current {
    color: #0A78F5;
    font-weight: bold;
    background-color: #fff;
}

.detail1,
.detail2,
.detail3,
.detail4 {
    padding: 44rpx 32rpx 44rpx 22rpx;
    width: calc(100% - 200rpx);
}

.detail1 {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.detail1 .device-img {
   width: 100%;
   display: flex;
   align-items: center;
   justify-content: center;
}
.device-img image{
    width: 254rpx;
    height: 270rpx;
}
.detail1 .device-status {
    margin-top: 18rpx;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.detail1 .point {
    width: 18rpx;
    height: 18rpx;
    margin-right: 5rpx;
}

.detail1 .point:nth-child(3) {
    margin-left: 36rpx;
}

.device-infos {
    width: 100%;
}

.device-infos-item {
    width: calc(100% - 64rpx);
    background-color: #F7F7F7;
    padding: 28rpx 32rpx;
    border-radius: 16rpx 16rpx 16rpx 16rpx;
    margin-top: 20rpx;
    color: #111;
    font-size: 24rpx;
}
.detail2{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.device-brand{
    width: 100%;
    height: 112rpx;
    background-color: #0A78F5;
    border-radius: 16rpx 16rpx 16rpx 16rpx;
    display: flex;
    align-items: center;

}
.device-brand image{
    width: 47rpx;
    height: 47rpx;
    margin-left: 30rpx;
    margin-right: 36rpx;
}
.device-brand .brand-txt{
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
    color: #FFF;
}
.brand-txt text:first-child{
    color: #fff;
    font-size: 26rpx;
    font-weight: bold;
}

.device-databox{
    margin-top: 30rpx;
    width: 100%;
}
.device-databox .title{
    font-size: 30rpx;
    color: #111;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.device-databox .title text{

}
.data-block{
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-between;
}
.data-item{
    width: calc((100% - 22rpx) / 3);
    background-color: #F7F7F7;
    height: 116rpx;
    margin-top: 24rpx;
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #111;
}
.data-item text:first-child{
    margin-bottom: 12rpx;
}
.device-chart{
    height: 365rpx;
    position: relative;
}
.chart-mask{
    position: absolute;
    width: 100%;
    height: 100%;
    top:0;
    left: 0;
    background-color: rgba(0,0,0,0);
}
.ti{
    width: 100%;
    background-color: rgba(0,0,0,0);
    height:40rpx;
    margin-top: 8rpx;
}
.ti1{
    margin-top: 50rpx;
}
.device-bottom{
    width: 100%;
    display: flex;
    align-items: center;
    margin-top: 50rpx;
    justify-content: space-around;
}
.device-bottom .btn{
    width: 240rpx;
    height: 80rpx;
    border-radius: 50rpx;
    text-align: center;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #0A78F5;
    color: #fff;
}
.device-bottom .btn:first-child{
    background-color: #35C984;
}
.device-chart2{
    height: 365rpx;
    margin-top: 24rpx;
}

.sub-title{
    color: #111111;
    font-size: 26rpx;
    padding-top: 24rpx;
    margin-bottom: 24rpx;
}

.legend{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #111111;
    justify-content: center;
    margin-top: 30rpx;
}
.legend image{
    width: 9rpx;
    height: 9rpx;
    margin-right: 12rpx;
}

.legend view{
    display: flex;
    align-items: center;
    margin-right: 24rpx;
}

.device-chart3{
    height: 400rpx;
    margin-top: 24rpx;
}

.table .thead .td:first-child,.table .tr .td:first-child{
    width: 25%;
}
.table .thead .td:nth-child(2),.table .tr .td:nth-child(2){
    width: 50%;
}
.table .thead .td:last-child,.table .tr .td:last-child{
    width: 25%;
}
.checkpoints .title,.time-axis .title{
    font-size: 30rpx;
    font-weight: bold;
    color: #111;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.checkpoints .content{
    width: calc(100% - 48rpx);
    padding: 32rpx 24rpx;
    border-radius: 16rpx 16rpx 16rpx 16rpx;
    background-color: #F7F7F7;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 24rpx;
    margin-bottom: 24rpx;
}
.checkpoints .content view{
    display: flex;
    flex-direction: column;
    color: #111;
    font-size: 24rpx;
}
.checkpoints .content view text:first-child{
    margin-bottom: 25rpx;
}
.checkpoints .content view text:last-child{
    font-size: 30rpx;
    color: #111;
    font-weight: bold;
}
.checkpoints .sub-tit{
    font-size: 26rpx;
}

/*外部容器*/
.listview-container {
    margin: 10rpx 10rpx;
    margin-bottom: 115rpx;
  }
    
  /*行样式*/
  .playlog-item {
    display: flex;
  }
    
  /*时间轴*/
  .playlog-item .dotline {
    width: 35px;
    position: relative;
  }
    
  /*竖线*/
  .playlog-item .dotline .line {
    width: 1px;
    height: 100%;
    background: #ccc;
    position: absolute;
    top: 0;
    left: 15px; 
  }
    
  /*圆点*/
  .playlog-item .dotline .dot {
    width: 11px;
    height: 11px; 
    background: #0A78F5;
    position: absolute; 
    top: 10px; 
    left: 10px; 
    border-radius: 50%; 
  }
    
  /*时间戳*/
  .playlog-item .dotline .time {
    width: 100%;
    position: absolute;
    margin-top: 30px;
    z-index: 99;
    font-size: 12px;
    color: #777;
    text-align: center;
  }
    
  /*右侧主体内容*/
  .playlog-item .content {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 3px 0;
  }
    
  /*章节部分*/
  .playlog-item .content .chapter {
    font-size: 30rpx;
    line-height: 68rpx;
    color: #111;
    white-space: normal;
    padding: 29rpx;
    background-color: #F7F7F7;
    border-radius: 16rpx 16rpx 16rpx 16rpx;
  }
    
  /*课程部分*/
  .playlog-item .content .course {
    font-size: 28rpx;
    line-height: 56rpx;
    color: #111;
    font-weight: bold;
  }
  

  .running-chart{
    width: 100%;
    padding-top: 24rpx;
  }

.running-chart .chart-item{
    width: 100%;
    height: 55rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.running-chart .chart-item text{
    font-size: 22rpx;
    color: #111;
}
.running-chart .chart-item .line-box{
    width: calc(100% - 65rpx);
    /* background-color: #F2F2F2; */
    height: 55rpx;
    position: relative;
}

.running-chart .chart-item .line-item{
    width: 2%;
    height: 16rpx;
    background-color: #35C984;
    position: absolute;
    top: 20rpx;
}

.running-string{
    width: 50%;
}

.running-string text{
    font-size: 24rpx;
}